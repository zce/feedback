<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0">
  <title>【每日反馈】{{item.class_name}}-{{item.date}}</title>
  <style>
    @media (min-width: 544px) {
      body {
        margin: 20px 10px
      }
    }

    @media (min-width: 768px) {
      body {
        margin: 40px 30px
      }
    }

    @media (min-width: 992px) {
      body {
        margin: 70px 60px
      }
    }

    @media (min-width: 1200px) {
      body {
        margin: 120px 100px
      }
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      margin-top: 1em;
      margin-bottom: 16px;
      font-weight: bold;
      line-height: 1.4;
    }

    h1 {
      padding-bottom: .3em;
      font-size: 2.25em;
      line-height: 1.2;
      border-bottom: 1px solid #eee;
    }

    h2 {
      padding-bottom: .3em;
      font-size: 1.75em;
      line-height: 1.225;
      border-bottom: 1px solid #eee;
    }

    h3 {
      font-size: 1.5em;
      line-height: 1.43;
    }

    h4 {
      font-size: 1.25em;
    }

    h5 {
      font-size: 1em;
    }

    h6 {
      font-size: 1em;
      color: #777;
    }

    p {
      margin-top: 0;
      margin-bottom: 10px;
    }

    table {
      border: 1px solid #e1e1e1;
      border-collapse: collapse;
      width: 100%;
      margin-top: 20px;
    }

    caption {
      text-align: left;
    }

    thead {
      background-color: #f5f5f5;
    }

    th,
    td {
      border: 1px solid #e1e1e1;
      padding: 8px;
    }

    th {
      padding: 15px;
      font-weight: 500;
    }

    .default {
      background-color: #fff; /* #ccc */
      color: #373A3E;
    }
    .primary {
      background-color: #0275d8; /* #0275d8 */
      color: #fff;
    }
    .success {
      background-color: #5cb85c; /* #5cb85c */
      color: #fff;
    }
    .info {
      background-color: #5bc0de; /* #5bc0de */
      color: #fff;
    }
    .warning {
      background-color: #f0ad4e; /* #f0ad4e */
      color: #fff;
    }
    .danger {
      background-color: #d9534f; /* #d9534f */
      color: #fff;
    }

    .nowrap th,
    .nowrap td {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      max-width: 0;
      min-width: 50px !important;
    }

    .danger {
      font-size: 20px;
      line-height: 2;
    }
  </style>
</head>

<body>
  <h1>【每日反馈】{{item.class_name}}-{{item.date}}</h1>
  <!-- 基本信息 -->
  <table class="nowrap">
    <caption><h2>反馈基本信息</h2></caption>
    <thead>
      <tr>
        <th colspan="2">项目</th>
        <th>数据</th>
      </tr>
    </thead>
    <tbody>
      <tr class="danger">
        <td colspan="2" align="center">主观调查综合得分</td>
        <td>&nbsp;&nbsp;<em{{#if(absorptivity>=85)}} style="color:rgba(92, 184, 92, 0.7)"{{elseif(absorptivity>=70)}} style="color:rgba(91, 192, 222, 0.7)"{{elseif(absorptivity>=60)}} style="color:rgba(240, 173, 78, 0.7)"{{else}} style="color:#f40"{{/if}}>{{absorptivity.toFixed(2)}}%</em></td>
      </tr>
      <tr>
        <td rowspan="4" align="center" width="80">班级信息</td>
        <td width="100" align="center">班级名称</td>
        <td>{{item.class_name}}</td>
      </tr>
      <tr>
        <td align="center">班级人数</td>
        <td>{{item.class_count}}人</td>
      </tr>
      <tr>
        <td align="center">出勤人数</td>
        <td>{{item.attendance}}人</td>
      </tr>
      <tr class="info">
        <td align="center">反馈人数</td>
        <td>{{item.receives_count}}人</td>
      </tr>
      <tr>
        <td rowspan="2" align="center">教学进度</td>
        <td align="center">授课日期</td>
        <td>{{item.date}}</td>
      </tr>
      <tr>
        <td align="center">教学内容</td>
        <td>{{item.course}}</td>
      </tr>
      <tr>
        <td rowspan="3" align="center">工作人员</td>
        <td align="center">讲师姓名</td>
        <td>{{item.teacher}}</td>
      </tr>
      <tr>
        <td align="center">助教姓名</td>
        <td>{{item.assistant}}</td>
      </tr>
      <tr>
        <td align="center">班主任姓名</td>
        <td>{{item.head}}</td>
      </tr>
    </tbody>
  </table>
  <!-- /基本信息 -->
  <!-- 学习目标吸收情况统计 -->
  <table class="nowrap">
    <caption><h2>学习目标吸收情况统计</h2></caption>
    <thead>
      <tr>
        <th>学习目标</th>
        {{#each(answer_options)~}}
        <th width="90">{{this.full}}</th>
        {{~/each}}
      </tr>
    </thead>
    <tbody>
      <tr class="success">
        <td align="center">综合结果</td>
        {{#each(answer_options)~}}
        {{set(tmp = percent[xindex].total/percent[xindex].count)}}
        <td>{{tmp.toFixed(2)}}%</td>
        {{~/each}}
      </tr>
      {{#each(item.targets)~}}
      <tr class="{{this.highlight ? 'info': 'default'}}">
        <td>{{this.question}}</td>
        {{#each(answer_options)~}}
        <td>{{percent[xindex][../xindex].toFixed(2)}}%</td>
        {{~/each}}
      </tr>
      {{~/each}}
    </tbody>
  </table>
  <!-- 学员意见或建议 -->
  <table>
    <caption><h2>学员意见或建议</h2></caption>
    <thead>
      <tr>
        <th width="60">姓名</th>
        <th>意见或建议</th>
      </tr>
    </thead>
    <tbody>
      {{#each(item.receives, 'item', 'ip')~}}
      {{#if(item.note)~}}
      <tr>
        <td title="{{ip}}" align="center">{{item.name}}</td>
        <td>{{item.note}}</td>
      </tr>
      {{~/if}}
      {{~/each}}
    </tbody>
  </table>
  <!-- /学员意见或建议 -->
  <!-- 统计原始数据 -->
  <table class="nowrap">
    <caption><h2>统计原始数据</h2></caption>
    <thead>
      <tr>
        <th width="60">姓名</th>
        {{#each(item.targets)~}}
        <th title="{{this.question}}">{{this.question}}</th>
        {{~/each}}
      </tr>
    </thead>
    <tbody>
      {{#each(item.receives, 'item', 'ip')~}}
      <tr>
        <td title="{{ip}}" align="center">{{item.name}}</td>
        {{#each(item.marks)~}}
        <td>{{answer_options[this].short}}</td>
        {{~/each}}
      </tr>
      {{~/each}}
    </tbody>
  </table>
  <!-- /统计原始数据 -->
</body>
</html>
